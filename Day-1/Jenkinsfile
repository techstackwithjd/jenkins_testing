pipeline {
    agent any
     options {
        ansiColor('xterm')
     }
     
    stages {
        stage("Build") {
            steps {
                echo "this is build stage"
        
            }
        }
    
        stage("testing") {
            steps {
                sh '''
                echo "this is testing stage"
                printf "\e[31mHello World\e[0m\n"
                printf "Normal \e[1mBold\e[0m\n"
                printf "Normal \e[4mUnderlined\e[0m\n"

                '''

                
            }
        }
        stage("package") {
            steps {
                echo "this is packaging stage"
                error "webhook"
                
            }
        }
    }



post {
    always {
        echo "I always execuste"
    }
    failure {
        echo "I execute on failure"
    }
    success {
        echo  "I execute on success"
    }

}

}

pipeline {
    agent any
     options {
        ansiColor('xterm')
     }

    stages {
        stage("Build") {
            steps {
                echo "this is build stage"
        
            }
        }
    
        stage("testing") {
            steps {
                echo "this is testing stage"
                
            }
        }
        stage("package") {
            steps {
                echo "this is packaging stage"
            }
        }
    }



post {
    always {
        echo "I always execuste"
    }
    failure{
        echo "I execute on failure"
    }
    success{
        echo " i execute on success"
    }

}

}

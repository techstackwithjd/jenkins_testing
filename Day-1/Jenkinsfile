pipeline {
    agent any
     options {
        ansiColor('xterm')
     }
    ansiColor('css') {
       sh "ls -al"
    }
    stages {
        stage("Build") {
            steps {
                echo "this is build stage"
        
            }
        }
    
        stage("testing") {
            steps {
                sh '''
                echo "this is testing stage"
                terraform init

                '''

                
            }
        }
        stage("package") {
            steps {
                echo "this is packaging stage"
                error "webhook"
                
            }
        }
    }



post {
    always {
        echo "I always execuste"
    }
    failure {
        echo "I execute on failure"
    }
    success {
        echo  "I execute on success"
    }

}

}

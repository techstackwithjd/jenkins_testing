pipeline {
    agent any



    stages {
        stage("Build") {
            steps {
                echo "this is build stage"
        
            }
        }
    
        stage("ENVI") {

            environment {
                        KEY1 = 'VALUE1'
                        KEY2 = 'VALUE2'
                }
            steps {
               echo "${KEY1}"
               echo "${KEY2}" 

                
            }
        }
        stage("package") {
            steps {
                echo "this is packaging stage"
                echo "after approval1"
                
            }
        }
    }



post {
    always {
        echo "I always execuste"
    }
    failure {
        echo "I execute on failure"
    }
    success {
        echo  "I execute on success"
    }

}

}
